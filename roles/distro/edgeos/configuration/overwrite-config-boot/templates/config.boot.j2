firewall {
    all-ping enable
    broadcast-ping disable
    group {
        address-group CLIENTS_ADMIN {
            address 10.0.10.11
            address 10.0.10.12
            address 10.0.10.13
            description "Clients: Administrator"
        }
        address-group CLIENTS_PERSONAL {
            address 10.0.10.0/24
            description "Clients: Personal"
        }
        address-group CLIENTS_PLEX {
            address 10.0.10.0/24
            address 10.0.80.200
            address 10.0.80.205
            description "Clients: Plex"
        }
        address-group NETWORKS_HOME {
            address 10.0.1.0/24
            address 10.0.10.0/24
            address 10.0.80.0/24
            address 10.0.90.0/24
            description "Networks: Home"
        }
        address-group NETWORKS_IPTV {
            address 192.168.1.0/24
            description "Networks: IPTV"
        }
        address-group NETWORKS_RFC1918 {
            address 192.168.0.0/16
            address 172.16.0.0/12
            address 10.0.0.0/8
            description "Networks: RFC1918"
        }
        address-group SERVERS_CIFS {
            address 10.0.1.25
            description "Servers: CIFS/SMB"
        }
        address-group SERVERS_DNS {
            address 10.0.1.1
            description "Servers: DNS"
        }
        address-group SERVERS_PLEX {
            address 10.0.1.25
            description "Servers: Plex"
        }
        address-group SERVERS_PROXY {
            address 10.0.1.1
            description "Servers: Reverse Proxy"
        }
        port-group PORTS_AIRPLAY {
            description "AirPlay"
            port 6002
            port 7000
            port 49152-65535
        }
        port-group PORTS_CHROMECAST {
            description "Chromecast"
            port 6466
            port 8008-8009
            port 8443
            port 32768-61000
        }
        port-group PORTS_CIFS {
            description "CIFS/SMB"
            port 139
            port 445
        }
        port-group PORTS_DHCP {
            description "DHCP"
            port 67
        }
        port-group PORTS_DNS {
            description "DNS"
            port 53
            port 784
            port 853
        }
        port-group PORTS_MDNS {
            description "mDNS"
            port 5353
        }
        port-group PORTS_PLEX {
            description "Plex Media Server"
            port 32400
        }
        port-group PORTS_PROXY {
            description "Reverse Proxy"
            port 80
            port 443
        }
    }
    ipv6-receive-redirects disable
    ipv6-src-route disable
    ip-src-route disable
    log-martians enable
    modify LAN_IPTV_IN {
        description "IPTV clients to LANs/Internet"
        rule 10 {
            action modify
            description "Forward IPTV traffic to the IPTV network"
            modify {
                table 105
            }
            source {
                group {
                    address-group NETWORKS_IPTV
                }
            }
        }
    }
    name LAN_GUESTS_IN {
        default-action accept
        description "Guest clients to LANs/Internet"
        rule 10 {
            action accept
            description "Allow established/related"
            log disable
            protocol all
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action accept
            description "Allow access to the DNS servers"
            destination {
                group {
                    address-group SERVERS_DNS
                    port-group PORTS_DNS
                }
            }
            log disable
            protocol tcp_udp
        }
        rule 30 {
            action drop
            description "Deny access to the internal LANs"
            destination {
                group {
                    address-group NETWORKS_RFC1918
                }
            }
            log disable
            protocol all
        }
    }
    name LAN_GUESTS_LOCAL {
        default-action drop
        description "Guest clients to EdgeRouter"
        rule 10 {
            action accept
            description "Allow access to the DHCP server"
            destination {
                group {
                    port-group PORTS_DHCP
                }
            }
            log disable
            protocol udp
        }
    }
    name LAN_IOT_IN {
        default-action accept
        description "IoT clients to LANs/Internet"
        rule 10 {
            action accept
            description "Allow established/related"
            log disable
            protocol all
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action accept
            description "Allow access to the DNS servers"
            destination {
                group {
                    address-group SERVERS_DNS
                    port-group PORTS_DNS
                }
            }
            log disable
            protocol tcp_udp
        }
        rule 30 {
            action accept
            description "Allow access to the Plex Media Server"
            destination {
                group {
                    address-group SERVERS_PLEX
                    port-group PORTS_PLEX
                }
            }
            log disable
            protocol tcp
            source {
                group {
                    address-group CLIENTS_PLEX
                }
            }
        }
        rule 40 {
            action accept
            description "Allow access to Apple clients (AirPlay)"
            destination {
                group {
                    address-group CLIENTS_PERSONAL
                }
            }
            log disable
            protocol tcp_udp
            source {
                group {
                    port-group PORTS_AIRPLAY
                }
            }
        }
        rule 50 {
            action drop
            description "Deny access to the internal LANs"

firewall {
    all-ping enable
    broadcast-ping disable
    group {
        address-group PLEX_CLIENTS {
            address 10.0.80.200
            address 10.0.80.205
            description "Plex client addresses"
        }
        network-group PRIVATE_NETWORKS {
            description "RFC1918 private ranges"
            network 192.168.0.0/16
            network 172.16.0.0/12
            network 10.0.0.0/8
        }
    }
    ipv6-receive-redirects disable
    ipv6-src-route disable
    ip-src-route disable
    log-martians enable
    name GUESTS_IN {
        default-action accept
        description "GUESTS to internal"
        rule 10 {
            action accept
            description "Allow established/related"
            destination {
                group {
                    network-group PRIVATE_NETWORKS
                }
            }
            log disable
            protocol all
            state {
                established enable
                invalid disable
                new disable
                related enable
            }
        }
        rule 20 {
            action accept
            description "Allow AdGuard Home DNS server"
            destination {
                address 10.0.10.200
                port 53
            }
            log disable
            protocol tcp_udp
        }
        rule 30 {
            action drop
            description "Drop all LAN traffic"
            destination {
                group {
                    network-group PRIVATE_NETWORKS
                }
            }
            log disable
            protocol all
        }
    }
    name GUESTS_LOCAL {
        default-action drop
        description "GUESTS to router"
        rule 10 {
            action accept
            description "Allow DHCP server"
            destination {
                port 67
            }
            log disable
            protocol udp
            source {
                port 68
            }
        }
    }
    name IOT_IN {
        default-action accept
        description "IOT to internal"
        rule 10 {
            action accept
            description "Allow established/related"
            destination {
                group {
                    network-group PRIVATE_NETWORKS
                }
            }
            log disable
            protocol all
            state {
                established enable
                invalid disable
                new disable
                related enable
            }
        }
        rule 20 {
            action accept
            description "Allow AdGuard Home DNS server"
            destination {
                address 10.0.10.200
                port 53
            }
            log disable
            protocol tcp_udp
        }
        rule 30 {
            action accept
            description "Allow Plex Media Player"
            destination {
                address 10.0.10.205
                port 32400
            }
            log disable
            protocol tcp_udp
            source {
                group {
                    address-group PLEX_CLIENTS
                }
            }
        }
        rule 40 {
            action drop
            description "Drop all LAN traffic"
            destination {
                group {
                    network-group PRIVATE_NETWORKS
                }
            }
            log disable
            protocol all
        }
    }
    name IOT_LOCAL {
        default-action drop
        description "IOT to router"
        rule 10 {
            action accept
            description "Allow DHCP server"
            destination {
                port 67
            }
            log disable
            protocol udp
            source {
                port 68
            }
        }
        rule 20 {
            action accept
            description "Allow mDNS repeater"
            destination {
                port 5353
            }
            log disable
            protocol udp
        }
    }
    name WAN_INTERNET_IN {
        default-action drop
        description "WAN to internal"
        rule 10 {
            action accept
            description "Allow established/related"
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action drop
            description "Drop invalid state"
            state {
                invalid enable
            }
        }
    }
    name WAN_INTERNET_LOCAL {
        default-action drop
        description "WAN to router"
        rule 10 {
            action accept
            description "Allow established/related"
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action drop
            description "Drop invalid state"
            state {
                invalid enable
            }
        }
    }
    receive-redirects disable
    send-redirects enable
    source-validation disable
    syn-cookies enable
}
interfaces {
    bridge br105 {
        aging 300
        bridged-conntrack disable
        description "Vodafone IPTV"
        hello-time 2
        max-age 20
        priority 32768
        promiscuous disable
        stp false
    }
    ethernet eth0 {
        description "Client: RFA-DesktopPC"
        duplex auto
        speed auto
    }
    ethernet eth1 {
        description "Client: LAB-RaspberryPi"
        duplex auto
        speed auto
    }
    ethernet eth2 {
        description "Client: LAB-DiskStation"
        duplex auto
        speed auto
    }
    ethernet eth3 {
        description "Client: USW-FlexMini-1"
        duplex auto
        speed auto
    }
    ethernet eth4 {
        description "Client: UAP-nanoHD-1"
        duplex auto
        speed auto
    }
    ethernet eth5 {
        disable
        duplex auto
        speed auto
    }
    ethernet eth6 {
        disable
        duplex auto
        speed auto
    }
    ethernet eth7 {
        disable
        duplex auto
        speed auto
    }
    ethernet eth8 {
        bridge-group {
            bridge br105
        }
        description "STB: Vodafone"
        duplex auto
        speed auto
    }
    ethernet eth9 {
        description WAN
        duplex auto
        poe {
            output off
        }
        speed auto
        vif 100 {
            address dhcp
            description "WAN: Internet"
            dhcp-options {
                default-route update
                default-route-distance 210
                name-server no-update
            }
            firewall {
                in {
                    name WAN_INTERNET_IN
                }
                local {
                    name WAN_INTERNET_LOCAL
                }
            }
        }
        vif 105 {
            bridge-group {
                bridge br105
            }
            description "WAN: IPTV"
        }
    }
    ethernet eth10 {
        disable
        duplex auto
        speed auto
    }
    ethernet eth11 {
        disable
        duplex auto
        speed auto
    }
    loopback lo {
    }
    switch switch0 {
        description VLAN
        mtu 1500
        switch-port {
            interface eth0 {
                vlan {
                    pvid 10
                }
            }
            interface eth1 {
                vlan {
                    pvid 10
                }
            }
            interface eth2 {
                vlan {
                    pvid 10
                }
            }
            interface eth3 {
                vlan {
                    pvid 10
                    vid 80
                    vid 90
                }
            }
            interface eth4 {
                vlan {
                    pvid 10
                    vid 80
                    vid 90
                }
            }
            interface eth5 {
                vlan {
                    pvid 10
                }
            }
            interface eth6 {
                vlan {
                    pvid 10
                }
            }
            interface eth7 {
                vlan {
                    pvid 10
                }
            }
            vlan-aware enable
        }
        vif 10 {
            address 10.0.10.254/24
            description "VLAN: Personal"
        }
        vif 80 {
            address 10.0.80.254/24
            description "VLAN: IoT"
            firewall {
                in {
                    name IOT_IN
                }
                local {
                    name IOT_LOCAL
                }
            }
        }
        vif 90 {
            address 10.0.90.254/24
            description "VLAN: Guests"
            firewall {
                in {
                    name GUESTS_IN
                }
                local {
                    name GUESTS_LOCAL
                }
            }
        }
    }
}

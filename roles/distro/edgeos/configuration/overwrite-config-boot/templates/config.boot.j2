                group {
                    address-group CLIENTS_PERSONAL
                }
            }
        }
        rule 70 {
            action accept
            description "Allow access to the internal LANs (Admins)"
            destination {
            }
            log disable
            protocol all
            source {
                group {
                    address-group CLIENTS_ADMIN
                }
            }
        }
        rule 80 {
            action drop
            description "Deny access to the internal LANs"
            destination {
                group {
                    address-group NETWORKS_RFC1918

        disable
        duplex auto
        speed auto
    }
    ethernet eth6 {
        disable
        duplex auto
        speed auto
    }
    ethernet eth7 {
        disable
        duplex auto
        speed auto
    }
    ethernet eth8 {
        address 192.168.1.254/24
        description "TV-boxHD"
        duplex auto
        firewall {
            in {
                modify LAN_IPTV_IN
            }
        }
        speed auto
    }
    ethernet eth9 {
        description "WAN"
        duplex auto
        poe {
            output 24v
        }
        speed auto
        vif 100 {
            address dhcp
            description "WAN: Internet"
            dhcp-options {
                default-route update
                default-route-distance 210
                name-server no-update
            }
            firewall {
                in {
                    name WAN_INTERNET_IN
                }
                local {
                    name WAN_INTERNET_LOCAL
                }
            }
        }
        vif 105 {
            address dhcp
            description "WAN: IPTV"
            dhcp-options {
                default-route no-update
                default-route-distance 210
                name-server no-update
            }
        }
    }
    ethernet eth10 {
        disable
        duplex auto
        speed auto
    }
    ethernet eth11 {
        disable
        duplex auto
        speed auto
    }
    loopback lo {
    }
    switch switch0 {
        description "VLAN"
        switch-port {
            interface eth0 {
                vlan {
                    pvid 10
                }
            }
            interface eth1 {
                vlan {
                    pvid 10
                }
            }
            interface eth2 {
                vlan {
                    pvid 10
                }
            }
            interface eth3 {
                vlan {
                    pvid 10
                    vid 80
                    vid 90
                }
            }
            interface eth4 {
                vlan {
                    pvid 10
                    vid 80
                    vid 90
                }
            }
            interface eth5 {
                vlan {
                    pvid 10
                }
            }
            interface eth6 {
                vlan {
                    pvid 10
                }
            }
            interface eth7 {
                vlan {
                    pvid 10
                }
            }
            vlan-aware enable
        }
        vif 10 {
            address 10.0.10.254/24
            description "VLAN: Personal"
            firewall {
                in {
                    name LAN_PERSONAL_IN
                }
                local {
                    name LAN_PERSONAL_LOCAL
                }
            }
        }
        vif 80 {
            address 10.0.80.254/24
            description "VLAN: IoT"
            firewall {
                in {
                    name LAN_IOT_IN
                }
                local {
                    name LAN_IOT_LOCAL
                }
            }
        }
        vif 90 {
            address 10.0.90.254/24
            description "VLAN: Guests"
            firewall {
                in {
                    name LAN_GUESTS_IN
                }
                local {
                    name LAN_GUESTS_LOCAL
                }
            }
        }
    }
}

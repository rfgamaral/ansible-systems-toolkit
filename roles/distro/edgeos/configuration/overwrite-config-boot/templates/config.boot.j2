firewall {
    all-ping enable
    broadcast-ping disable
    group {
        address-group CLIENTS_PLEX {
            address 10.0.80.200
            address 10.0.80.205
            description "Plex clients addresses"
        }
        address-group CLIENTS_TRUSTED {
            address 10.0.10.11
            address 10.0.10.12
            address 10.0.10.13
            address 10.0.10.200
            description "Trusted clients addresses"
        }
        address-group NETWORKS_HOME {
            address 10.0.10.0/24
            address 10.0.80.0/24
            address 10.0.90.0/24
            description "Home private networks"
        }
        address-group NETWORKS_RFC1918 {
            address 192.168.0.0/16
            address 172.16.0.0/12
            address 10.0.0.0/8
            description "RFC1918 private networks"
        }
        address-group NETWORK_IPTV {
            address 192.168.1.0/24
            description "IPTV private network"
        }
    }
    ipv6-receive-redirects disable
    ipv6-src-route disable
    ip-src-route disable
    log-martians enable
    modify LAN_IPTV_IN {
        description "IPTV clients to LANs/Internet"
        rule 10 {
            action modify
            description "Forward IPTV traffic to the IPTV network"
            modify {
                table 105
            }
            source {
                group {
                    address-group NETWORK_IPTV
                }
            }
        }
    }
    name LAN_GUESTS_IN {
        default-action accept
        description "Guest clients to LANs/Internet"
        rule 10 {
            action accept
            description "Allow established/related"
            log disable
            protocol all
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action accept
            description "Allow access to the DNS server"
            destination {
                address 10.0.10.200
                port 53
            }
            log disable
            protocol tcp_udp
        }
        rule 30 {
            action drop
            description "Deny access to all internal LANs"
            destination {
                group {
                    address-group NETWORKS_RFC1918
                }
            }
            log disable
            protocol all
        }
    }
    name LAN_GUESTS_LOCAL {
        default-action drop
        description "Guest clients to EdgeRouter"
        rule 10 {
            action accept
            description "Allow access to the DHCP server"
            destination {
                port 67
            }
            log disable
            protocol udp
        }
    }
    name LAN_IOT_IN {
        default-action accept
        description "IoT clients to LANs/Internet"
        rule 10 {
            action accept
            description "Allow established/related"
            log disable
            protocol all
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action accept
            description "Allow access to the DNS server"
            destination {
                address 10.0.10.200
                port 53
            }
            log disable
            protocol tcp_udp
        }
        rule 30 {
            action accept
            description "Allow access to the Plex Media Server"
            destination {
                address 10.0.10.205
                port 32400
            }
            log disable
            protocol tcp_udp
            source {
                group {
                    address-group CLIENTS_PLEX
                }
            }
        }
        rule 40 {
            action drop
            description "Deny access to all internal LANs"
            destination {
                group {
                    address-group NETWORKS_RFC1918
                }
            }
            log disable
            protocol all
        }
    }
    name LAN_IOT_LOCAL {
        default-action drop
        description "IoT clients to EdgeRouter"
        rule 10 {
            action accept
            description "Allow access to the DHCP server"
            destination {
                port 67
            }
            log disable
            protocol udp
        }
        rule 20 {
            action accept
            description "Allow access to the mDNS repeater"
            destination {
                port 5353
            }
            log disable
            protocol udp
        }
    }
    name LAN_PERSONAL_IN {
        default-action accept
        description "Personal clients to LANs/Internet"
    }
    name LAN_PERSONAL_LOCAL {
        default-action accept
        description "Personal clients to EdgeRouter"
        rule 10 {
            action accept
            description "Allow established/related"
            log disable
            protocol all
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action accept
            description "Allow access to the DNS server"
            destination {
                port 53
            }
            log disable
            protocol tcp_udp
            source {
                group {
                    address-group CLIENTS_TRUSTED
                }
            }
        }
        rule 30 {
            action accept
            description "Allow access to the SSH server"
            destination {
                port 22
            }
            log disable
            protocol tcp
            source {
                group {
                    address-group CLIENTS_TRUSTED
                }
            }
        }
        rule 40 {
            action accept
            description "Allow access to the Web UI"
            destination {
                port 80,443
            }
            log disable
            protocol tcp
            source {
                group {
                    address-group CLIENTS_TRUSTED
                }
            }
        }
        rule 50 {
            action drop
            description "Deny access to the DNS server"
            destination {
                port 53
            }
            log disable
            protocol tcp_udp
            source {
                group {
                    address-group NETWORKS_RFC1918
                }
            }
        }
        rule 60 {
            action drop
            description "Deny access to the SSH server"
            destination {
                port 22
            }
            log disable
            protocol tcp
            source {
                group {
                    address-group NETWORKS_RFC1918
                }
            }
        }
        rule 70 {
            action drop
            description "Deny access to the Web UI"
            destination {
                port 80,443
            }
            log disable
            protocol tcp
            source {
                group {
                    address-group NETWORKS_RFC1918
                }
            }
        }
    }
    name WAN_INTERNET_IN {
        default-action drop
        description "Internet to LANs"
        rule 10 {
            action accept
            description "Allow established/related"
            log disable
            protocol all
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action drop
            description "Deny invalid state"
            log disable
            protocol all
            state {
                invalid enable
            }
        }
    }
    name WAN_INTERNET_LOCAL {
        default-action drop
        description "Internet to EdgeRouter"
        rule 10 {
            action accept
            description "Allow established/related"
            log disable
            protocol all
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action drop
            description "Deny invalid state"
            log disable
            protocol all
            state {
                invalid enable
            }
        }
    }
    receive-redirects disable
    send-redirects enable
    source-validation disable
    syn-cookies enable
}

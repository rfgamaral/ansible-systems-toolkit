            action accept
            description "Allow access to the EdgeRouter (Admins)"
            log disable
            protocol all
            source {
                group {
                    address-group CLIENTS_ADMIN
                }
            }
        }
    }
    name WAN_INTERNET_IN {
        default-action drop
        description "Internet to LANs"
        rule 10 {
            action accept
            description "Allow established/related"
            log disable
            protocol all
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action drop
            description "Deny invalid state"
            log disable
            protocol all
            state {
                invalid enable
            }
        }
    }
